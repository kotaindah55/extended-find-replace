{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2022",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"types": ["obsidian-typings"],
		"libReplacement": false,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2023",
			"DOM.Iterable",
			"DOM.AsyncIterable"
		]
	},
	"include": ["src/**/*"]
}